!!!
html
    head
        title= "Real time web chat"
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        //if lt IE 9
            script(src='http://code.jquery.com/jquery-1.10.2.min.js')
        //[if gte IE 9]><!
        script(src="http://code.jquery.com/jquery-2.0.3.min.js")
        //<![endif]
        script(src='/socket.io/socket.io.js')
        script(src='/chat.js')
    body
        #content(style='width: 500px; height: 300px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')
        .controls
            input#name(type="hidden", value="#{username}")
            br
            input#field(style='width:350px;', placeholder="Enter your message here")
            input#send(type='button', value='send')